{
  "name": "@alipay/o3-root",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "browser": "dist/index.browser.js",
  "types": "types/index.d.ts",
  "private": true,
  "bin": {
    "o3": "./scripts/create.module.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "tnpm i && lerna bootstrap --hoist",
    "test": "jest",
    "test-cov": "jest --coverage",
    "test-cov-ci": "jest --coverage --testPathIgnorePatterns='.*.gl.test.ts'",
    "watch": "cross-env NODE_ENV=MODULE rollup -cw",
    "watch:umd": "cross-env NODE_ENV=BUILD rollup -cw",
    "ci": "lerna bootstrap && tnpm run build && tnpm run b:types && tnpm run test-cov-ci",
    "lint": "eslint packages/*/src --ext .ts",
    "build": "cross-env NODE_ENV=MODULE rollup -c",
    "b:types": "lerna exec -- rm -rf tsconfig.tsbuildinfo && lerna run b:types",
    "build-all": "cross-env NODE_ENV=ALL rollup -c",
    "b:types-cache": "lerna run b:types",
    "b:all": "npm-run-all --parallel b:types build-all",
    "b:doc": "node scripts/build.doc.js",
    "b:umd": "cross-env NODE_ENV=UMD rollup -c",
    "b:miniprogram": "cross-env NODE_ENV=MINI rollup -c",
    "c:module": "node scripts/create.module.js",
    "clean": "lerna exec -- rm -rf dist && lerna clean",
    "docs:update": "node scripts/docs.update.js",
    "post-changelog": "node scripts/post-changelog.js",
    "doc": "rm -rf doc && typedoc --options scripts/doc/typedoc.js" 
  },
  "files": [
    "src",
    "types",
    "dist"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@ali/ci": "^4.24.0",
    "@ali/rollup-plugin-string": "^3.0.0",
    "@alipay/oasis-typedoc-theme": "^0.0.9",
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.6.2",
    "@babel/node": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-decorators": "^7.7.4",
    "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@babel/plugin-transform-modules-umd": "^7.7.4",
    "@babel/plugin-transform-object-assign": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-typescript": "^7.3.3",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-inject": "^4.0.2",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@strictsoftware/typedoc-plugin-monorepo": "^0.3.1",
    "@types/jest": "^24.0.23",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "ali-contributors": "^2.2.2",
    "axios": "^0.19.0",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-external-helpers": "^6.22.0",
    "chalk": "^2.4.2",
    "copy-dir": "^1.1.0",
    "cross-env": "^5.2.0",
    "esbuild": "^0.7.21",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "fs-extra": "^8.1.0",
    "husky": "^2.2.0",
    "inquirer": "^6.5.1",
    "jest": "^24.8.0",
    "lerna": "^3.13.4",
    "lint-staged": "^10.0.0-1",
    "lodash": "^4.17.11",
    "node-fetch": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.0",
    "rollup": "^2.x",
    "rollup-plugin-esbuild": "^2.5.2",
    "rollup-plugin-modify": "^3.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^4.1.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "typedoc": "0.19.2",
    "typedoc-plugin-remove-references": "^0.0.5",
    "typescript": "^3.9.3",
    "urllib": "^2.34.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "ci": {
    "type": "aci",
    "versions": "12"
  }
}
