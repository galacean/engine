{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "skipDefaultLibCheck": true,
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "declarationDir": "types",
    "sourceMap": true,
    "baseUrl": "./",
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "global.d.ts",
    "packages/**/*.ts",
    "packages/**/*.d.ts",
  ],
  "exclude": ["node_modules", "types", "packages/*/tests"]
}
